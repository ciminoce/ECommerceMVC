@model ECommerceMVC.Web.ViewModels.Ciudad.CiudadListViewModel
@{
    ViewBag.Title = "Delete";
}

<h2>Borrar Modelo</h2>
<hr />
@using (Html.BeginForm("Delete", "Ciudades", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.NombrePais)
        @Html.TextBoxFor(m => m.NombrePais, new { @class = "form-control col-md-6", disabled = "disabled" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NombreCiudad)
        @Html.TextBoxFor(m => m.NombreCiudad, new { @class = "form-control col-md-6", disabled = "disabled" })
    </div>

    <div class="form-group">
        <button class="btn btn-danger" type="submit">Borrar</button>
        <a href="@Url.Action("Index", "Ciudades")" class="btn btn-success">Volver</a>

    </div>
}