@model ECommerceMVC.Web.ViewModels.Categoria.CategoriaEditViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Nuevo País </h2>
<hr />
@using (Html.BeginForm("Create", "Categorias", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.NombreCategoria)
        @Html.TextBoxFor(m => m.NombreCategoria, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.NombreCategoria, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Guardar</button>
        <a href="@Url.Action("Index","Categorias")" class="btn btn-success">Volver</a>

    </div>
}