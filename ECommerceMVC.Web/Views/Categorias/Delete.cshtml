@model ECommerceMVC.Web.ViewModels.Categoria.CategoriaListViewModel
@{
    ViewBag.Title = "Delete";
}

<h2>Borrar Categoría</h2>
<hr />
@using (Html.BeginForm("Delete", "Categorias", FormMethod.Post))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.NombreCategoria)
        @Html.TextBoxFor(m => m.NombreCategoria, new { @class = "form-control", disabled = "disable" })
    </div>

    <div class="form-group">
        <button class="btn btn-danger">
            <i class="fas fa-trash-alt"></i>
            Borrar
        </button>
        <a href="@Url.Action("Index", "Categorias")" class="btn btn-success">
            <i class="fas fa-backspace"></i>
            Volver
        </a>
    </div>
}